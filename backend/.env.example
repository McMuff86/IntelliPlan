# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (connection string)
# Docker default (see docker-compose.yml)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/intelliplan

# Option 2: Use individual variables
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intelliplan
DB_USER=postgres
DB_PASSWORD=postgres

# Auth
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRY=7d
SEED_USER_PASSWORD=changeme123
APP_BASE_URL=http://localhost:5173
EMAIL_VERIFY_BYPASS=false

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=IntelliPlan <no-reply@intelliplan.local>
SMTP_REPLY_TO=

# Local dev (Mailpit)
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_SECURE=false

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
